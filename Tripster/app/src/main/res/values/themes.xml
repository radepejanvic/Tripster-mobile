<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tripster" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="fontFamily">@font/poppins</item>
        <item name="android:colorBackground">@color/grey</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="EditTextStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">@color/hint</item>
    </style>

    <style name="BackButtonStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Accommodation">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/gray</item>
        <item name="android:foreground">@color/gray</item>
    </style>
</resources>