<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tripster" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/grey</item>

    </style>

    <style name="ButtonTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="EditTextStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="BackButtomStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Theme.Tripster" parent="Base.Theme.Tripster" />
</resources>