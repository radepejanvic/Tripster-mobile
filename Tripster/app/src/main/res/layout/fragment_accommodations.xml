<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".AccommodationsFragment">

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/hotel101"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="25dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AccommodationBackground"
            android:elevation="100dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/frame_layout_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="25dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/gray"
                    android:clickable="true"
                    android:elevation="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hotel_room_101" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/residenceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:text="Hotel Norrebro"
                style="@style/AccommodationTitleText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0.4 km from city centre"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/residenceName" />

            <TextView
                android:id="@+id/infoText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="Free cancelation"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/distance" />

            <TextView
                android:id="@+id/infoText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Premium room"
                style="@style/AccommodationRateText"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image"
                app:layout_constraintTop_toBottomOf="@id/infoText1" />
            <TextView
                android:id="@+id/infoText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1 x king size bed"
                style="@style/AccommodationSmallText"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image"
                app:layout_constraintTop_toBottomOf="@id/infoText2" />

            <TextView
                android:id="@+id/infoText4"
                style="@style/AccommodationSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="1 x bathroom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image"
                app:layout_constraintTop_toBottomOf="@id/infoText3" />

            <TextView
                android:id="@+id/gradeText"
                style="@style/AccommodationRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="Excelent"

                app:layout_constraintEnd_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image" />

            <TextView
                android:id="@+id/textViewReviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1,456 reviews"

                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/gradeText" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccommodationButtons"
                    android:padding="5dp"

                    android:text="4.6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_layout_image" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewPrice"
                style="@style/AccommodationTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230€"
                android:layout_marginRight="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewReviewCount" />
            <TextView
                android:id="@+id/textViewPriceDescription"
                style="@style/AccommodationSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per night"
                android:layout_marginRight="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPrice" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bookingCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPriceDescription">

                <TextView
                    android:id="@+id/textBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/AccommodationButtons"
                    android:padding="5dp"

                    android:text="See booking options"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.cardview.widget.CardView>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
        <!--Ispod ovoga ce se brisati jer ostaje samo kostur a kasnije cemo praviti dinamicko ucitavanje -->
