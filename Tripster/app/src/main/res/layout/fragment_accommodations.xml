                    app:layout_constraintEnd_toStartOf="@+id/cardView2"
                    app:layout_constraintTop_toBottomOf="@+id/gradeText2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_layout_image2">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AccommodationButtons"
                        android:padding="5dp"

                        android:text="4.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frame_layout_image2" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textViewPrice2"
                    style="@style/AccommodationTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="230€"
                    android:layout_marginRight="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewReviewCount2" />
                <TextView
                    android:id="@+id/textViewPriceDescription2"
                    style="@style/AccommodationSmallText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="per night"
                    android:layout_marginRight="20dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPrice2" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/bookingCard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewPriceDescription2">

                    <TextView
                        android:id="@+id/textBooking2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/AccommodationButtons"
                        android:padding="5dp"

                        android:text="See booking options"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>