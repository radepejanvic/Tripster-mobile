            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/residenceName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:text="Hotel Norrebro"
                style="@style/AccommodationTitleText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image1"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image1"
                app:layout_constraintVertical_bias="0.05" />

            <TextView
                android:id="@+id/distance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0.4 km from city centre"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/residenceName1" />

            <TextView
                android:id="@+id/infoText11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:text="Free cancelation"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/distance1" />

            <TextView
                android:id="@+id/infoText21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Premium room"
                style="@style/AccommodationRateText"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image1"
                app:layout_constraintTop_toBottomOf="@id/infoText11" />
            <TextView
                android:id="@+id/infoText31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1 x king size bed"
                style="@style/AccommodationSmallText"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image1"
                app:layout_constraintTop_toBottomOf="@id/infoText21" />

            <TextView
                android:id="@+id/infoText41"
                style="@style/AccommodationSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:text="1 x bathroom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/frame_layout_image1"
                app:layout_constraintTop_toBottomOf="@id/infoText31" />

            <TextView
                android:id="@+id/gradeText1"
                style="@style/AccommodationRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="Excelent"

                app:layout_constraintEnd_toStartOf="@+id/cardView1"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image1" />

            <TextView
                android:id="@+id/textViewReviewCount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="1,456 reviews"

                android:textSize="10sp"
                app:layout_constraintEnd_toStartOf="@+id/cardView1"
                app:layout_constraintTop_toBottomOf="@+id/gradeText1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frame_layout_image1">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"

                    android:text="4.6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frame_layout_image1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewPrice1"
                style="@style/AccommodationTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="230€"
                android:layout_marginRight="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewReviewCount1" />
            <TextView
                android:id="@+id/textViewPriceDescription1"
                style="@style/AccommodationSmallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per night"
                android:layout_marginRight="20dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPrice1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/bookingCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewPriceDescription1">

                <TextView
                    android:id="@+id/textBooking1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"

                    android:text="See booking options"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>