<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_background"
    >

    <TextView
        android:id="@+id/report_form_title"
        style="@style/TitleText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/report_form_title_user"
        android:layout_marginTop="20dp"
        android:textColor="?attr/colorOnPrimary"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/reason_input"
        style="@style/EditTextStyle"
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:autofillHints=""
        android:background="@drawable/login_button"
        android:ems="10"
        android:hint="@string/report_form_reason_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/report_form_title" />



    <Button
        android:id="@+id/add_report"
        style="@style/ButtonTextStyle"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button"
        android:text="@string/review_form_button_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reason_input" />

</androidx.constraintlayout.widget.ConstraintLayout>