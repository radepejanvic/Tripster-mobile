<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tripster" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="fontFamily">@font/poppins</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">4dp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="EditTextStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BackButtonStyle" parent="ButtonTextStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="AccommodationBackground">
        <item name="android:background">@color/darkGrey</item>
    </style>
    <style name="AccommodationButtons">
        <item name="color">@color/black</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="AccommodationTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AccommodationRateText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="AccommodationSmallText">
        <item name="android:textSize">10dp</item>
    </style>
</resources>